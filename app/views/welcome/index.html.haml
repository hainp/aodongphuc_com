%section.full.banners
  %div.slides
    - @banners.each do |banner|
      %div
        %img{src: "#{banner.featured_image}"}
  %div.buttons
    - @buttons.each do |button|
      %div.banner-button
        %a{href: "#{button.link}"}
          %img{src: "#{button.featured_image}"}
%div.full.transit.transit-1
%section.products
  %h3.title Sản phẩm nổi bật
  - @products.each_slice(4).to_a.each do |row|
    %div.row
      - row.each do |product|
        = render "product_partial", :product => product
%section.categories
  %h3.title Các loại áo
  - @categories.each_slice(4).to_a.each do |row|
    %div.row
      - row.each do |category|
        = render "category_partial", :category => category
%section.lookbook
  %h3.title Lookbook
  %div.slides
    %div.slide
      = image_tag "lookbook-1.png"
    %div.slide
      = image_tag "lookbook-2.png"
    %div.slide
      = image_tag "lookbook-3.png"
    %div.slide
      = image_tag "lookbook-1.png"
    %div.slide
      = image_tag "lookbook-2.png"
    %div.slide
      = image_tag "lookbook-3.png"
